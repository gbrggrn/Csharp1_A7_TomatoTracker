<Window x:Class="TomatoTracker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomatoTracker"
        mc:Ignorable="d"
        Title="Window1" Height="580" Width="450" ResizeMode="CanMinimize">
    <Grid>
        <!-- Define Rows and Cols -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Top Bar -->
            <RowDefinition Height="*"/>
            <!-- Lower Part -->
        </Grid.RowDefinitions>
        
        <!-- Top Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="1" Background="#FFD0B6B6">
            <DockPanel>
                <Image x:Name="tomatoimg" Height="50" Width="50" Source="C:\Users\gusta\source\repos\TomatoTracker\TomatoTracker\Img\tomato.png" Margin="10,0,0,0"/>
                <Label x:Name="tomatoTrackerLabel" Content="Tomato Tracker - Add New Breed" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </DockPanel>
        </Border>
        
        <!-- Main Area -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Background="#FF7D5A5A">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Labels -->
                <StackPanel Grid.Column="0">
                    <Label x:Name="breedNameLabel" Content="Breed Name" FontSize="14" HorizontalAlignment="Right" Margin="10,10,0,0"/>
                    <Label x:Name="plantDateLabel" Content="Plant Date" FontSize="14" HorizontalAlignment="Right" Margin="10,10,0,0"/>
                    <Label x:Name="typeTomatoLabel" Content="Type of Tomato" FontSize="14" HorizontalAlignment="Right" Margin="10,10,0,0"/>
                    <Label x:Name="otherNotesLabel" Content="Other Notes" FontSize="14" HorizontalAlignment="Right" Margin="10,10,0,0"/>
                </StackPanel>
                
                <!-- Fields -->
                <StackPanel Grid.Column="1">
                    <TextBox x:Name="breedNameTxtBox" HorizontalAlignment="Left" Width="250" Margin="10,15,0,0"/>
                    <DatePicker x:Name="plantDatePicker" SelectedDateFormat="Short" HorizontalAlignment="Left" Width="250" Margin="10,19,0,0"/>
                    <ComboBox x:Name="typeComboBox" IsEditable="False" HorizontalAlignment="Left" Width="250" Margin="10,19,0,0"/>
                    <RichTextBox x:Name="otherNotesRichTxtBox" HorizontalAlignment="Left" Width="250" Height="250" Margin="10,20,0,0"/>
                    
                    <!-- OK/CANCEL Buttons -->
                    <Grid Height="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- OK Button -->
                        <Button x:Name="okButton" Grid.Column="0" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="60" Height="25" BorderThickness="0" BorderBrush="Black" FontWeight="Bold" FontSize="18" Click="OkButton_Click"/>
                        <!-- Cancel Button -->
                        <Button x:Name="cancelButton" Grid.Column="1" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" Width="60" Height="25" BorderThickness="0" BorderBrush="Black" FontWeight="Bold" FontSize="18" Click="CancelButton_Click"/>
                    </Grid>
                        
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
