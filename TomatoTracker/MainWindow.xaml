<Window x:Name="TomatoTracker" x:Class="TomatoTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomatoTracker"
        mc:Ignorable="d"
        Title="Tomato Tracker" Height="710" Width="1050" ResizeMode="CanMinimize">
    <Grid>
            <!-- Define Rows and Cols -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Top Bar -->
                <RowDefinition Height="*"/>
                <!-- Lower Part -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <!-- Sidebar-->
                <ColumnDefinition Width="*"/>
                <!-- Display Area-->
            </Grid.ColumnDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0" Background="#FFD0B6B6">
                <DockPanel>
                    <Image x:Name="tomatoimg" Height="50" Width="50" Source="Img/tomato.png"  Margin="10,0,0,0"/>
                    <Label x:Name="tomatoTrackerLabel" Content="Tomato Tracker" FontSize="20" VerticalAlignment="Center" Margin="10,0,85,0"/>
                    <Button x:Name="saveButton" Content="Save Dashboard" Width="160" BorderThickness="0" Background="Transparent" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Click="SaveButton_Click"/>
                    <Button x:Name="loadButton" Content="Load Dashboard" Width="160" BorderThickness="0" Background="Transparent" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Click="LoadButton_Click"/>
                    <Button x:Name="newButton" Content="New Dashboard" Width="160" BorderThickness="0" Background="Transparent" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Click="NewButton_Click"/>
                    <Button x:Name="helpButton" Content="Help" Width="60" BorderThickness="0" Background="Transparent" FontSize="20" VerticalAlignment="Center" Margin="90,0,0,0" Click="HelpButton_Click"/>
                    <Button x:Name="exitButton" Content="Exit" Width="60" BorderThickness="0" Background="Transparent" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Click="ExitButton_Click"/>
            </DockPanel>
            </Border>

            <!-- Sidebar-->
            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="0" Background="#FF7D5A5A">
                <Grid>
                    <!-- Sidebar Rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <!-- Menu Title -->
                        <RowDefinition Height="*"/>
                        <!-- Menu Content -->
                        <RowDefinition Height="60"/>
                        <!-- Menu Buttons -->
                    </Grid.RowDefinitions>
                    <!-- Menu Title -->
                    <DockPanel Grid.Row="0">
                        <Label x:Name="myBreedsLabel" Content="My Breeds" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <!-- My Breeds -->
                        <Button x:Name="addBreedButton" Content="+ Breed" Background="Transparent" BorderThickness="0" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0" Click="AddBreedButton_Click"/>
                        <!-- Add Breeds Button -->
                    </DockPanel>
                    <!-- Menu Content -->
                    <ListBox x:Name="breedsListBox" Grid.Row="1" Height="470" FontFamily="Segoe UI" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Margin="15">
                        <!-- Add Items Programmatically -->
                    </ListBox>
                    <!-- Menu Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- Remove Button -->
                        <Button x:Name="removeButton" Grid.Column="0" Content="Remove" Background="Transparent" BorderThickness="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Click="RemoveButton_Click"/>
                        <!-- Deselect Button -->
                        <Button x:Name="deselectButton" Grid.Column="1" Content="Deselect" Background="Transparent" BorderThickness="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Click="DeselectButton_Click"/>
                        <!-- Edit Button -->
                        <Button x:Name="editButton" Grid.Column="2" Content="Edit" Background="Transparent" BorderThickness="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Click="EditButton_Click"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Display Area Definition -->
            <Border Grid.Row="1" Grid.Column="1" Background="#FFD0B6B6" BorderBrush="Black" BorderThickness="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- Area 1 Top Left -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#FF7D5A5A" BorderBrush="Black" BorderThickness="0" Margin="15,10,10,10">
                        <!-- TO DO TODAY -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <!-- Title -->
                        <Label x:Name="toDoTodayLabel" Content="" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <!-- Display ListBox -->
                            <ListBox x:Name="toDoListBox" Grid.Row="1" Background="Transparent" FontSize="12" FontFamily="Courier New" Width="320" Height="215" ScrollViewer.CanContentScroll="True"/>
                    </Grid>
                    </Border>

                    <!-- Area 2 Top Right -->
                    <Border Grid.Row="0" Grid.Column="1" Background="#FF7D5A5A" BorderBrush="Black" BorderThickness="0" Margin="10,10,20,10">
                        <!-- WATERING TRACKER -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                        <!-- Title -->
                        <Label x:Name="wateringLabel" Content="Watering Dates Next 3 Weeks" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        <!-- Display ListBox -->
                        <ListBox x:Name="wateringListBox" Grid.Row="1" Background="Transparent" FontSize="12" FontFamily="Courier New" Width="320" Height="215" ScrollViewer.CanContentScroll="True"/>
                    </Grid>
                </Border>

                    <!-- Area 3 Bottom Left -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#FF7D5A5A" BorderBrush="Black" BorderThickness="0" Margin="15,10,10,20">
                        <!-- TRELLIS TRACKER -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                        <!-- Title -->
                        <Label x:Name="trellisLabel" Content="Trellising Dates Next 3 Weeks" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        <!-- Display ListBox -->
                        <ListBox x:Name="trellisListBox" Grid.Row="1" Background="Transparent" FontSize="12" FontFamily="Courier New" Width="320" Height="215" ScrollViewer.CanContentScroll="True"/>
                    </Grid>
                </Border>

                    <!-- Area 4 Bottom Right-->
                    <Border Grid.Row="1" Grid.Column="1" Background="#FF7D5A5A" BorderBrush="Black" BorderThickness="0" Margin="10,10,20,20">
                        <!-- PROJECTED HARVEST DATE -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                        <!-- Title -->
                        <Label x:Name="harvestDateLabel" Content="Projected Harvest Dates" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        <!-- Display ListBox -->
                        <ListBox x:Name="harvestDateListBox" Grid.Row="1" Background="Transparent" FontSize="12" FontFamily="Courier New" Width="320" Height="215" ScrollViewer.CanContentScroll="True"/>
                    </Grid>
                </Border>
                </Grid>
            </Border>
        </Grid>
</Window>
